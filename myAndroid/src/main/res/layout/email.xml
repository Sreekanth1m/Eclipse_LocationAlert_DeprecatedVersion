<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:weightSum="100">
<ScrollView 
    android:layout_weight="30"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tvEmailAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:hint="Enter Email Address" />

    <EditText
        android:id="@+id/etEmailAdd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tvPerMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal Message" />

    <EditText
        android:id="@+id/etPerMsg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10" />

    <TextView
        android:id="@+id/tvHateMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hate Message" />

    <EditText
        android:id="@+id/etHateMsg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10" />

    <TextView
        android:id="@+id/tvIntro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introduction" />

    <EditText
        android:id="@+id/etIntro"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10" />

    <TextView
        android:id="@+id/tvStpAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stupid Action" />

    <EditText
        android:id="@+id/etStpAction"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10" />

    <TextView
        android:id="@+id/tvOutro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Outro Message" />

    <EditText
        android:id="@+id/etOutro"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10" />

    <TextView
        android:id="@+id/tvEndMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ending Message" />

    <EditText
        android:id="@+id/etEndMsg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10" />
</LinearLayout>
</ScrollView>

<LinearLayout 
    android:layout_weight="40"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:id="@+id/bSendEmail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Send Email" />
</LinearLayout>

<LinearLayout 
    android:layout_weight="30"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <AnalogClock
        android:id="@+id/analogClock1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
</LinearLayout>